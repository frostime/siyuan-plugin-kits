{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "declaration": true,
        "outDir": "./dist",
        "strict": false,
        "esModuleInterop": true,
        "moduleResolution": "node",  //重要
        // "jsx": "preserve",
        // "jsxImportSource": "solid-js"
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}